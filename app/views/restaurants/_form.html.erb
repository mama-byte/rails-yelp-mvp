<%= simple_form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "form_inputs">
    <%= f.input :name %>
    <%= f.iput :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
